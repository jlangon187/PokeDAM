<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/buscar"
        android:scaleType="centerCrop"
        android:alpha="0.3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPokemons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:visibility="gone"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_menu_help"
                app:tint="#CC0000"
                android:layout_marginBottom="16dp"
                android:contentDescription="Icono vacío"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡TU POKÉDEX ESTÁ VACÍA!"
                android:fontFamily="@font/pokemon_solid"
                android:textSize="20sp"
                android:textColor="#333333"
                android:textAlignment="center"
                android:letterSpacing="0.05"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parece que aún no has comenzado tu aventura."
                android:textSize="14sp"
                android:textColor="#777777"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSearchPokemon"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="¡IR A CAPTURAR!"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/pokemon_solid"
                android:letterSpacing="0.1"
                android:backgroundTint="#CC0000"
                app:cornerRadius="30dp"
                android:paddingHorizontal="32dp"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBackFromList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#3B4CCA"
        android:elevation="10dp"
        android:fontFamily="@font/pokemon_solid"
        android:letterSpacing="0.1"
        android:text="VOLVER AL MENÚ"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="20dp" />

</FrameLayout>